#!/bin/bash

sudo apt-get install jq \
                     zsh \
                     nmap \
                     tmux \
                     weechat \
                     git-flow \
                     python-dev \
                     build-essential \
                     haskell-platform \
		     ripgrep

# Dependencies for VIM
sudo apt-get install libxt-dev \
                     libx11-dev \
                     libxpm-dev \
                     python-dev \
                     libncurses-dev

[[ ! $SHELL =~ "zsh" ]] && chsh -s `which zsh`

# Install asdf
if [[ ! -d ~/.asdf ]]; then
  git clone https://github.com/asdf-vm/asdf.git ~/.asdf
fi
