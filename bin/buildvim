#!/bin/sh

platform=$(uname | awk '{print tolower($0)}')

make distclean

if [ $platform = "linux" ]; then
  ./configure \
    --with-x \
    --with-features=huge \
    --enable-rubyinterp \
    --enable-pythoninterp \
    --with-compiledby="Dhruva Sagar <dhruva.sagar@gmail.com>" \
    --with-python-config-dir=$(/usr/bin/python2.7-config --configdir)
else
  ./configure \
    --prefix=/usr/local \
    --enable-rubyinterp \
    --enable-pythoninterp \
    --with-features=huge \
    --with-compiledby="Dhruva Sagar <dhruva.sagar@gmail.com>" \
    --with-python-config-dir=$(/usr/bin/python-config --includes | awk '{print $2}')
fi

sudo make
sudo make install
