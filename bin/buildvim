#!/bin/sh

platform=$(uname | awk '{print tolower($0)}')

make distclean

if [ $platform = "linux" ]; then
  ./configure \
    --with-x \
    --with-features=huge \
    --enable-rubyinterp \
    --enable-pythoninterp \
    --with-python-config-dir=$(/usr/bin/python2.7-config --configdir)
else
  ./configure \
    --prefix=/usr/local \
    --enable-rubyinterp \
    --enable-pythoninterp \
    --enable-perlinterp \
    --with-features=huge
fi

make
sudo make install
