#!/bin/sh

# With Python3
# ./configure --with-features=huge --enable-python3interp --with-python-config-dir=/usr/lib/python3.2/config --enable-rubyinterp --enable-gui=gtk2

make distclean
# Linux
# ./configure \
#   --with-x \
#   --with-features=huge \
#   --enable-gui=auto \
#   --enable-gtk2-check \
#   --enable-gnome-check \
#   --enable-rubyinterp \
#   --enable-pythoninterp \
#   --with-python-config-dir=$(/usr/bin/python2.7-config --configdir)
#
#   OSX
./configure \
  --enable-pythoninterp \
  --enable-rubyinterp \
  --enable-luainterp=yes \
  --with-lua-prefix=/usr/local \
  --with-luajit \
  --with-features=huge
make
sudo make install
