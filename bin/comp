#!/usr/bin/env bash

set -e

info () {
  tput setaf 6; echo "$1"; tput sgr0
}

error () {
  tput setaf 1; (>&2 echo "$1"); tput sgr0
}

success () {
  tput setaf 2; echo "$1"; tput sgr0
}

quit () {
  usage
  exit 1
}

usage () {
  cat <<EOM
  comp v0.1
  Dhruva Sagar <dhruva.sagar@gmail.com>

  Scaffolds files for solving a new comp problem

  USAGE:
    $0 [COMMAND] [ARGS]

  COMMANDS:
    create
      Scaffolds all the files in a new directory for the given programming
      language.

      Examples:
        $0 create <LANG> <NAME>

    help
      Prints this usage information.
EOM
}

TEMPLATE_DIR="${HOME}/dotfiles/templates"

# Ensure you have bash version 4+
declare -A extn_map
extn_map['ruby']='rb'
extn_map['python']='py'
extn_map['haskell']='hs'

create_project () {
  extn=${extn_map["$1"]}
  if [ -z $extn ]; then
    extn="$1"
  fi
  name="$2"
  cd "$name"
  if [ -f "${TEMPLATE_DIR}/file.${extn}" ]; then
    cp "${TEMPLATE_DIR}/file.${extn}" "${name}.${extn}"
  elif [ -d "${TEMPLATE_DIR}/${extn}" ]; then
    cp -R "${TEMPLATE_DIR}/${extn}/." .
    if [ -f "file.${extn}" ]; then
      mv "file.${extn}" "${name}.${extn}"
    fi
  else
    touch "${name}.${extn}"
  fi
  cp -R "${TEMPLATE_DIR}/shared/." .
  find . -type f -exec sed -i "s/{{name}}/${name}/g" {} +
}

create () {
  lang="$1"
  if [ -z "$lang" ]; then
    quit
  fi
  name="$2"
  if [ -z "$name" ]; then
    quit
  fi
  name="$2"
  mkdir -p "$name/bin"
  create_project "$lang" "$name"
}

COMMAND=$1
case "$COMMAND" in
  create)
    create "${@:2}"
    ;;
  help)
    usage
    ;;
  *)
    quit
esac
